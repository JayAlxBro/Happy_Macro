<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyMacro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/creme</item>
        <item name="colorPrimaryVariant">@color/lightCreme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dreamscicle</item>
        <item name="colorSecondaryVariant">@color/sage</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HappyMacro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HappyMacro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HappyMacro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>