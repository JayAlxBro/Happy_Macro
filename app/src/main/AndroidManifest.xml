<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cpst343.happymacro">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HappyMacro">
        <activity
            android:name=".Tracker"
            android:exported="false"
            android:label="@string/title_activity_tracker"
            android:theme="@style/Theme.HappyMacro.NoActionBar" />

        <activity
            android:name=".little_info"
            android:exported="false" />
        <activity
            android:name=".goal"
            android:exported="false"
            android:label="@string/title_activity_goal2" />
        <activity
            android:name=".SummaryActivity"
            android:exported="false"
            android:label="@string/title_activity_summary" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>